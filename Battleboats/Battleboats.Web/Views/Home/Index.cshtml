@{
    ViewBag.Title = "Home Page";
}

<div ng-app="BattleBoatsApp" ng-controller="joinGameController">
    <div class="row">
        <div class="col-md-4">
            <h2>Join the game</h2>
            <form role="form">
                <div class="form-group">
                    <label for="username">Username</label>
                    <input name="username" id="username" ng-model="username" class="form-control" placeholder="Username" />
                </div>
                <button type="button" class="btn btn-primary" ng-click="joinGame()">Join</button>
            </form>
        </div>
    </div>
</div>
